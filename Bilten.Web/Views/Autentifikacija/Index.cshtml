@model Bilten.Web.ViewModels.LoginVM
@{
    ViewData["Title"] = "Login";
    string error_poruka = (string)TempData["error_poruka"];
    Layout = "_LayoutAnonymous";
}
<div class="col-md-4 col-md-offset-4">

    <form action="/Autentifikacija/Login" class="loginForma">

        <img class="muplogo" src="http://www.muphnk.ba/sites/all/themes/muphnk/slike/ulaz-grb.fw.png" alt="Alternate Text" />
        <hr class="style: border: 1px solid #29456d;"/>
        <div class="form-group">
            <label>Username:</label>
            <div>
                <input class="form-control" type="text" name="username" value="@Model.username" />
                <span asp-validation-for="username" class="text-danger"></span>
            </div>
        </div>
        <br />

        <div class="form-group">
            <label>Password:</label>
            <div>
                <input class="form-control"  type="password" name="password" value="@Model.password" />
                <span asp-validation-for="password" class="text-danger"></span>
            </div>
        </div>
        <br />

        <input type="submit" class="loginbtn form-control btn btn-primary" value="Login" />
        <br />
        <br />
        <input asp-for="ZapamtiPassword" /> Zapamti password

    </form>
</div>


@if(error_poruka != null)
{
    <br />
    <div class="alert alert-danger">
        @error_poruka
    </div>
}
