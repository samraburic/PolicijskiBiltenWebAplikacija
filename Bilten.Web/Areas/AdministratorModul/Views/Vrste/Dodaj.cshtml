
@{
    ViewData["Title"] = "Dodaj";
    Layout = "~/Views/Shared/_Layout-Admin.cshtml";
}
@using Bilten.Web.Areas.AdministratorModul.ViewModels.Vrste;
@model VrsteDodajVM

<div>
    <h2 style="display:inline-block">Dodavanje nove vrste za kategoriju "<b>@Model.NazivKategorije</b>"</h2>
    <a href="/AdministratorModul/Vrste/Odaberi?=@Model.KategorijeId" class="btn btn-primary " style="float:right;margin-right:20px"><i class="fa fa-backward"></i></a>

    <hr />
</div>
<form action="/AdministratorModul/Vrste/Snimi">
    <input type="text" name="kategorijeId" value="@Model.KategorijeId" hidden />

    <label>Naziv:</label>
    <input type="text" class="form-control col-lg-6" required name="nazivVrste" />
    @Html.ValidationMessageFor(model => model.NazivKategorije) <!--"Name is required"-->
    <br />
    <br />
    <input type="submit" name="name" value="Snimi" class="btn btn-danger" />
</form>
<br />
<br />
<hr />
