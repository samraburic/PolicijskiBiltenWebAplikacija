
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout-Admin.cshtml";
}
@using Bilten.Web.Areas.AdministratorModul.ViewModels.Vrste;
@model VrsteIndexVM

<div>
    <h2 style="display:inline-block">Odaberi kategoriju za vrstu</h2>
    <a href="/AdministratorModul" class="btn btn-primary" style="float:right;margin-right:20px"><i class="fa fa-backward"></i></a>

    <hr />
</div>
<table class="table table-hover table-bordered table-condensed" style="width:600px;">
    <thead>
        <tr>
            <th>Naziv</th>
            <th>Akcija</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model.Rows)
        {
            <tr>
                <td>@x.NazivKategorije</td>
                <td width="10">
                    <a href="/AdministratorModul/Vrste/Odaberi?=@x.KategorijeId" class="btn btn-info">Odaberi</a>
                </td>
            </tr>
        }

    </tbody>
</table>
<br />
<hr />