
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout-Admin.cshtml";
}
@using Bilten.Web.Areas.AdministratorModul.ViewModels.Mjere;
@model MjereIndexVM

<div>
    <h2 style="display:inline-block">Odaberite kategoriju</h2>
    <a href="/AdministratorModul" class="btn btn-primary" style="float:right;margin-right:20px"><i class="fa fa-backward"></i></a>

    <hr />
</div>
<table class="table table-hover table-bordered table-condensed" style="width:600px;">
    <thead>
        <tr>
            <th>Naziv</th>
            <th>Akcija</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model.Rows)
        {
            <tr>
                <td>@x.NazivKategorije</td>@(" ")
                <td width="10">
                    <a href="/AdministratorModul/Mjere/Prikazi?=@x.KategorijeId" class="btn btn-info">Prikazi</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<hr />
<br />
<br />

<div id="prikazMjera"></div>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>

<script type="text/javascript" src="js/script.js"></script>
<script>
    $(".Klik").click(function (event) {
        var btn = $(this);
        var id = btn.attr("atribut");

        $.get("/Mjere/Prikazi?=" + id, function (rezultat, status) {
            $("#prikazMjera").html(rezultat);
        });
    });
