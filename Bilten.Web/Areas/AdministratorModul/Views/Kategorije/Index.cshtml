
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout-Admin.cshtml";
}
@using Bilten.Web.Areas.AdministratorModul.ViewModels.Kategorije;
@model KategorijeIndexVM

<div>
    <h2 style="display:inline-block">Kategorije</h2>
    <a href="/AdministratorModul/" class="btn btn-primary " style="float:right;margin-right:20px"><i class="fa fa-backward"></i></a>

    <hr />
</div>
<table class="table table-bordered table-condensed table-hover" style="width:50%;">
    <thead>
        <tr>
            <th>Naziv</th>
            <th>Akcija</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model.Rows)
        {
            <tr>
                <td>@x.Naziv</td>
                <td style="width:100px;">
                    <a href="/AdministratorModul/Kategorije/Uredi?=@x.KategorijeId" class="btn-sm btn-warning" style="color:white;">Uredi</a>
                    <a href="/AdministratorModul/Kategorije/Obrisi?=@x.KategorijeId"><i class="fa fa-fw fa-close fa-1x text-danger"></i></a>
                </td>
            </tr>
        }

    </tbody>
</table><br />
<a href="/AdministratorModul/Kategorije/Dodaj" class="btn btn-success">Dodaj</a>
<br />
<br />
<hr />
<br />