
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout-Admin.cshtml";
}
@using Bilten.Web.Areas.AdministratorModul.ViewModels.Dogadjaj;
@model DogadjajIndexVM


<div>
    <h2 style="display:inline-block">Odaberite kategoriju</h2>
        <a href="/AdministratorModul/Dogadjaj/Lista2" class="btn btn-primary " style="float:right;margin-right:20px"><i class="fa fa-backward"></i></a>

        <hr />
</div>
<table class="table table-bordered table-hover" style="width:50%">
    <thead>
        <tr>
            <th>Kategorija</th>
            <th>Akcija</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model.Rows)
        {
            <tr>
                <td>@x.NazivKategorije</td>
                <td width="8"><a href="/AdministratorModul/Dogadjaj/Dodaj?=@x.KategorijeId"  class="btn btn-info">Odaberi</a></td>
            </tr>

        }
    </tbody>
</table><br />
<hr />





