
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout-Operater.cshtml";
}
@using Bilten.Web.Areas.OperaterModul.ViewModels.Dogadjaj;
@model DogadjajIndexVM

<div>
    <h4 style="display:inline-block">Dodavanje novog događaja (Odaberite kategoriju)</h4>
    <a href="/OperaterModul/Dogadjaj/Lista2" class="btn btn-primary " style="float:right;margin-right:20px"><i class="fa fa-list"></i></a>
    <a href="/OperaterModul/Home" class="btn btn-primary " style="float:right;margin-right:20px"><i class="fa fa-home"></i></a>

    <hr />
</div>

<table class="table table-bordered table-hover" style="width:50%">
    <thead>
        <tr>
            <th>Kategorija</th>
            <th>Akcija</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model.Rows)
        {
            <tr>
                <td>@x.NazivKategorije</td>
                <td width="10"><a href="/OperaterModul/Dogadjaj/Dodaj?=@x.KategorijeId" class="btn btn-info">Odaberi</a></td>
            </tr>

        }
    </tbody>
</table>
<hr />
